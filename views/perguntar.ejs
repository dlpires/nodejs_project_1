<%- include('partials/header.ejs')  %>
<%- include('partials/navbar.ejs')  %>
<div class="container">
    <div class="card" id="form-pergunta">
        <div class="card-header">
            <h3>Realizar Pergunta</h3>
        </div>
        <div class="card-body">
            <form method="POST" action="/salvarpergunta">
                <label for="titulo">Titulo:</label>
                <input type="text" placeholder="Titulo" name="titulo" id="titulo" autofocus required class="form-control">
                <br>
                <label for="descricao">Descrição:</label>
                <textarea name="descricao" placeholder="Descreva sua pergunta aqui!" id="descricao" cols="30" rows="10" class="form-control" required></textarea>
                <br>
                <button class="btn btn-primary">Perguntar</button>
            </form>
        </div>
    </div>
</div>
<%- include('partials/footer.ejs')  %>