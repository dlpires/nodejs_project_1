<%- include('partials/header.ejs')  %>
<%- include('partials/navbar.ejs')  %>
<div class="container">
    <hr>
    <h1><%= pergunta.titulo %></h1>
    <p><%= pergunta.descricao %></p>
    <hr>
    <form action="/responder" method="post">
        <h3>Responda</h3>
        <br>
        <label for="corpo">Resposta:</label>
        <textarea class="form-control" name="corpo" id="corpo" cols="20" rows="10" autofocus required></textarea>
        <br>
        <input type="hidden" name="perguntaId" value="<%= pergunta.id %>"> <!--ID DA PERGUNTA-->
        <button class="btn btn-primary">Responder</button>
    </form>
    <hr>
    <h3>Respostas</h3>
    <hr>
    <% respostas.forEach(resposta => { %>
        <div class="card">
            <div class="card-body">
                <p><%= resposta.corpo %></p>
            </div>
        </div>
        <br>
    <% }); %>
</div>
<%- include('partials/footer.ejs')  %>